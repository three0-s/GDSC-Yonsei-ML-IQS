server {
        listen 80 default_server;
        return 403;  # 도메인이 아닌 IP로 접속하고자 하는 시도는 차단
}
server {
        listen 80;  # 80번, 즉 HTTP 포트로 들어오는 접속에 대해,
        listen [::]:80;
        server_name http://3.27.130.188/;  # 다음과 같은 도메인 요청이라면,
        access_log /var/log/nginx/manage.log;  # 이 파일에 로그를 할 것이며,

        location / {  # 프록시 정보를 소켓 형태로 전달
                include proxy_params;
                proxy_pass http://unix:/gdsc-yonsei/manage.sock;
        }
}